{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Color</th>
                <th>UpdatedAt</th>
                <th>CreationAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.picture }}</td>
                <td>{{ category.color }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.creationAt ? category.creationAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a href="{{ path('back_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('back_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_category_new') }}">Create new</a>
{% endblock %}
