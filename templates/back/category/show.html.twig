{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1 class="text-center">Categorie</h1>

    <table class="table">
        <tbody>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.picture }}</td>
            </tr>
            <tr>
                <th>Modifié le:</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Crée le:</th>
                <td>{{ category.creationAt ? category.creationAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
           
        </tbody>
    </table>

    <a type="button" class="btn btn-outline-success d-grid gap-2 col-6 mx-auto" href="{{ path('back_category_index') }}">Revenir à la liste</a><br/>

    <a type="button" class="btn btn-outline-primary d-grid gap-2 col-6 mx-auto" href="{{ path('back_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
