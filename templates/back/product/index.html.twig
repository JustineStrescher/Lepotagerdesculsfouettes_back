{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Summary</th>
                <th>Available</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Picture</th>
                <th>Weight</th>
                <th>UpdatedAt</th>
                <th>CreationAt</th>
                <th>Slug</th>
                <th>Hihlighted</th>
                <th>Online</th>
                <th>Price</th>
                <th>UnitType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.summary }}</td>
                <td>{{ product.available }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.picture }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.creationAt ? product.creationAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.hihlighted }}</td>
                <td>{{ product.online }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.unitType }}</td>
                <td>
                    <a href="{{ path('back_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('back_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_product_new') }}">Create new</a>
{% endblock %}
