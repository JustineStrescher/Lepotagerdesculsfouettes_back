{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ product.summary }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ product.available }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ product.weight }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreationAt</th>
                <td>{{ product.creationAt ? product.creationAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Hihlighted</th>
                <td>{{ product.hihlighted }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ product.online }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>UnitType</th>
                <td>{{ product.unitType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_product_index') }}">back to list</a>

    <a href="{{ path('back_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
