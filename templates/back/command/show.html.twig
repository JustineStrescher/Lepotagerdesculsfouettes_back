{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1 class="text-center">Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Client</th>
                <td><a href="{{ path('back_user_show', {'id': command.user.id}) }}">{{ command.user.firstname }} {{ command.user.lastname }}</a></td>
            </tr>
            <tr>
                <th>NumFact</th>
                <td>{{ command.numFact }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ command.status }}</td>
            </tr>
            <tr>
                <th>Modifié le :</th>
                <td>{{ command.updatedAt ? command.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Crée le :</th>
                <td>{{ command.creationAt ? command.creationAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TotalTTC</th>
                <td>{{ command.totalTTC }}</td>
            </tr>
            <tr>
                <th>TotalHT</th>
                <td>{{ command.totalHT }}</td>
            </tr>
            <tr>
                <th>TotalTVA</th>
                <td>{{ command.totalTVA }}</td>
            </tr>
        </tbody>
    </table>
<a type="button" class="btn btn-outline-primary d-grid gap-2 col-6 mx-auto" href="{{ path('back_command_edit', {'id': command.id}) }}">Modifier</a></br>

    {{ include('back/command/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <td colspan="4">
                   <h2 class="text-center" >Produits commandés</h2>
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
            {% for productsCommand in command.productCommands %}
            <tr>
                <td>{{ productsCommand.product.name }}</td>
                <td>{{ productsCommand.quantity }}</td>
                <td>{{ productsCommand.unitPrice }} €</td>
                <td><a type="button" class="btn btn-outline-primary d-grid gap-2 col-6 mx-auto" href="{{ path('back_product_command_edit', {'id': productsCommand.id}) }}">Modifier</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a type="button" class="btn btn-outline-warning d-grid gap-2 col-6 mx-auto" href="{{ path('back_product_command_new') }}">Ajouter des produit à ma commande</a></br>

    <a type="button" class="btn btn-outline-success d-grid gap-2 col-6 mx-auto" href="{{ path('back_command_index') }}">Revenir à la liste</a></br>

    
{% endblock %}
