{% extends 'base.html.twig' %}

{% block title %}Produit commandé{% endblock %}

{% block body %}
    <h1 class="text-center">Produit commandé</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_command.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product_command.quantity }}</td>
            </tr>
            <tr>
                <th>UnitPrice</th>
                <td>{{ product_command.unitPrice }}</td>
            </tr>
            <tr>
                <th>TotalTTC</th>
                <td>{{ product_command.totalTTC }}</td>
            </tr>
            <tr>
                <th>TotalHT</th>
                <td>{{ product_command.totalHT }}</td>
            </tr>
            <tr>
                <th>TotalTVA</th>
                <td>{{ product_command.totalTVA }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-outline-success d-grid gap-2 col-6 mx-auto" href="{{ path('back_product_command_index') }}">Revenir à la liste</a><br/>


    <a type="button" class="btn btn-outline-primary d-grid gap-2 col-6 mx-auto" href="{{ path('back_product_command_edit', {'id': product_command.id}) }}">Modifier</a><br/>

    {{ include('back/product_command/_delete_form.html.twig') }}
{% endblock %}
